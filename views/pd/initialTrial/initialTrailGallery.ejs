<%- include('../../includes/header')-%>
<div id="wrapper" class="wrapper">
  <%- include('../../includes/topbar')-%>
  <div class="page-wrap">
    <%- include('../../includes/sidebar')-%>
    <div class="main-content">
      <div class="container-fluid">
        <div class="row clearfix">
          <div class="col-md-10">
            <h1 class="text-center"><%= title %></h1>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <div class="row clearfix">
              <div class="col-md-3">
                <label for="district">বাছুন:</label>
                <select id="district" name="district">
                  <%- include('../../includes/header')-%>
                  <div id="wrapper" class="wrapper">
                    <%- include('../../includes/topbar')-%>
                    <div class="page-wrap">
                      <%- include('../../includes/sidebar')-%>
                      <div class="main-content">
                        <div class="container-fluid">
                          <div class="row clearfix">
                            <div class="col-md-10">
                              <h1 class="text-center"><%= title %></h1>
                            </div>
                          </div>

                          <div class="panel-body"></div>

                          <div class="container gallery-container">
                            <form
                              action="/pd/initialTrialGalleryPost"
                              id="initialTrialForm"
                              class="form-horizontal"
                              method="post"
                              role="form"
                              enctype="multipart/form-data"
                            >
                              <div class="row">
                                <div class="form-group col-md-4">
                                  <label>নতুন ছবি আপ্লোড করুন</label>
                                  <input
                                    type="file"
                                    id="filename"
                                    class="form-control"
                                    name="primaryPresentation"
                                    required
                                  />
                                </div>

                                <div class="form-group col-md-4">
                                  <label for="district">বাছুন:</label>
                                  <select
                                    id="district"
                                    name="district"
                                    class="form-control"
                                  >
                                    <option value="">জেলা বাছুন:</option>
                                    <%if (district.length >0){ %> <%
                                    district.forEach(function(row){ %>
                                    <option value="<%= row.id %>">
                                      <%= row.district %>
                                    </option>
                                    <% }) %> <% } %>
                                  </select>
                                </div>

                                <div class="form-group col-md-4">
                                  <div class="form-group">
                                    <label for="district">উপজেলা :</label>
                                    <select
                                      name="upazilla"
                                      id="upazilla"
                                      class="form-control"
                                    >
                                      <option
                                        value="0"
                                        disabled="true"
                                        selected="true"
                                      >
                                        উপজেলা বাছুন
                                      </option>
                                    </select>
                                  </div>
                                </div>
                                <div class="form-group col-md-4">
                                  <label for="district"></label>
                                  <input
                                    type="submit"
                                    name="submit"
                                    value="আপ্লোড"
                                    class="btn btn-primary"
                                  />
                                </div>
                              </div>
                            </form>

                            <div class="tz-gallery">
                              <div class="row">
                                <% records.forEach(function(row,index){ %>
                                <div class="col-sm-12 col-md-4">
                                  <a class="lightbox" href="<%= row.image %>">
                                    <img class="chobi" src="<%= row.image %>" />
                                  </a>
                                </div>
                                <% }) %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <%- include('../../includes/footer')-%>
                  <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
                  <script>
                    baguetteBox.run(".tz-gallery");

                    $("#district").on("change", function () {
                      var district = $("#district").val();
                      $.ajax({
                        type: "POST",
                        url: "/pd/trainedFarmerDistrictFilter",
                        data: { district: district },
                        datatype: "json",
                        beforeSend: function () {
                          // setting a timeout
                          $("#loading").show();
                          $("#output").hide();
                        },
                        success: function (data) {
                          $("#output").html(data);
                          $("#tblCustomers").DataTable();
                          $("#upazilla").empty();
                          if (data) {
                            $.each(data, function (key, value) {
                              $("#upazilla").append(
                                '<option value="' +
                                  value.id +
                                  '">' +
                                  value.upazilla +
                                  "</option>"
                              );
                            });
                          } else {
                            $("#upazilla").empty();
                          }
                        },
                        complete: function () {
                          $("#loading").hide();
                          $("#output").show();
                        },
                      });
                    });
                  </script>
                  <option value="">জেলা বাছুন:</option>
                  <%if (district.length >0){ %> <%
                  district.forEach(function(row){ %>
                  <option value="<%= row.id %>"><%= row.district %></option>
                  <% }) %> <% } %>
                </select>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <select name="upazilla" id="upazilla" class="form-control">
                    <option value="0" disabled="true" selected="true">
                      উপজেলা বাছুন
                    </option>
                  </select>
                </div>
              </div>

              <div class="col-md-3">
                <label for="year">বছর বাছুন:</label>
                <select id="year" name="year">
                  <option value="2017">২০১৭-১৮</option>
                  <option value="2018">২০১৮-১৯</option>
                  <option value="2019">২০১৯-২০</option>
                  <option value="2020" selected>২০২০-২১</option>
                  <option value="2021">২০২১-২২</option>
                  <option value="2022">২০২২-২৩</option>
                  <option value="2023">২০২৩-২৪</option>
                </select>
              </div>
              <div class="col-md-2">
                <!-- Button -->
                <div>
                  <input
                    type="submit"
                    id="submit"
                    name="submit"
                    value="রিপোর্ট দেখুন"
                    class="btn btn-primary"
                  />
                </div>
              </div>
              <div class="col-md-1">
                <a
                  href="/pd/trainedFarmerGallery"
                  class="btn btn-success btn-group-sm"
                  >গ্যালারী</a
                >
              </div>
            </div>
          </div>
        </div>
        <!-- <div class="row mb-2">
                            <div class="col-md-12">
                                <a href="/upazilla/trainedFarmerForm" class="btn btn-success btn-group-sm ">প্রশিক্ষণপ্রাপ্ত কৃষকের তথ্য ফর্ম</a>
                            </div>

                        </div> -->

        <div class="table-responsive" id="output"></div>

        <input type="button" id="btnExport" value="Download PDF" />

        <div id="output"></div>
        <!--                    <div id="loading" class="loading"><img src="{{ asset('assets/img/icon/loading.gif') }}" alt=""></div>-->
      </div>
    </div>
  </div>
</div>

<%- include('../../includes/footer')-%>
<script>
  $(document).ready(function () {
    $(".dropdown a.test").on("click", function (e) {
      $(this).next("ul").toggle();
      e.stopPropagation();
      e.preventDefault();
    });
  });
</script>

<script type="text/javascript">
  $("body").on("click", "#btnExport", function () {
    html2canvas($("#tblCustomers")[0], {
      onrendered: function (canvas) {
        var data = canvas.toDataURL();
        var docDefinition = {
          content: [
            {
              image: data,
              width: 650,
            },
          ],
        };
        pdfMake.createPdf(docDefinition).download("farmer-details.pdf");
      },
    });
  });

  $("#district").on("change", function () {
    var district = $("#district").val();
    $.ajax({
      type: "POST",
      url: "/pd/trainedFarmerDistrictFilter",
      data: { district: district },
      datatype: "json",
      beforeSend: function () {
        // setting a timeout
        $("#loading").show();
        $("#output").hide();
      },
      success: function (data) {
        $("#output").html(data);
        $("#tblCustomers").DataTable();
        $("#upazilla").empty();
        if (data) {
          $.each(data, function (key, value) {
            $("#upazilla").append(
              '<option value="' + value.id + '">' + value.upazilla + "</option>"
            );
          });
        } else {
          $("#upazilla").empty();
        }
      },
      complete: function () {
        $("#loading").hide();
        $("#output").show();
      },
    });
  });

  $("#wrapper").load("no url rn", function () {
    var year = $("#year").val();
    var upazilla = $("#upazilla").val();
    $.ajax({
      type: "POST",
      url: "/pd/trainedFarmerFilter",
      data: { year: year, upazilla: upazilla },
      datatype: "json",
      beforeSend: function () {
        // setting a timeout
        $("#loading").show();
        $("#output").hide();
      },
      success: function (data) {
        $("#output").html(data);
        $("#tblCustomers").DataTable();
      },
      complete: function () {
        $("#loading").hide();
        $("#output").show();
      },
    });
  });

  $("#submit").on("click", function () {
    var year = $("#year").val();
    var upazilla = $("#upazilla").val();
    $.ajax({
      type: "POST",
      url: "/pd/trainedFarmerFilter",
      data: { year: year, upazilla: upazilla },
      datatype: "json",
      beforeSend: function () {
        // setting a timeout
        $("#loading").show();
        $("#output").hide();
      },
      success: function (data) {
        $("#output").html(data);
        $("#tblCustomers").DataTable();
      },
      complete: function () {
        $("#loading").hide();
        $("#output").show();
      },
    });
  });

  $(document).ready(function () {
    $("#tblCustomers").DataTable();
  });
</script>
