<%- include('../../includes/header')-%>
        <div class="wrapper">
          <%- include('../../includes/topbar')-%>
            <div class="page-wrap">
              <%- include('../../includes/sidebar')-%>
              <div class="main-content">
                <div class="container-fluid">
                    <div class="row clearfix">
                    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title"><h2>কর্মকর্তার প্রশিক্ষণ ফর্ম</h2></div>
                                <p><%
                                if(success !=''){ %>
                                <%= success %>
                                    <% } %>
                                </p>
                                </div>  
                            <div class="panel-body" >
                                <form action="/pd/kormokortaEditPost/<%=records.id%>" id="FieldTrialForm" class="form-horizontal" method="post"  role="form">
                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>


                                    <div class="form-group">
                                        <label for="name" class="col-md-3 control-label">কর্মকর্তার নাম</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="name" placeholder="কর্মকর্তার নাম" value="<%=records.name%>">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="place" class="col-md-3 control-label">পদবী ও কর্মস্থল</label>
                                        <div class="col-md-9">
                                        <input type="text" class="form-control" name="place" placeholder="পদবী ও কর্মস্থল" value="<%=records.place%>">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="mobile" class="col-md-3 control-label">মোবাইল নম্বর</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="mobile" placeholder="মোবাইল নম্বর " value="<%=records.mobile%>">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="topic" class="col-md-3 control-label">প্রশিক্ষণের বিষয়</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="topic" placeholder="প্রশিক্ষণের বিষয়" value="<%=records.topic%>">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="date" class="col-md-3 control-label">প্রশিক্ষণের তারিখ</label>
                                        <div class="col-md-9">
                                            <input type="date" class="form-control" name="date" placeholder="প্রশিক্ষণের তারিখ" value="<%=records.date%>"> 
                                        </div>
                                    </div>

                                    
                                    <div class="form-group">
                                        <!-- Button -->                                        
                                        <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                                        </div>
                                    </div>
                                    
                                    
                                        
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../../includes/footer')-%>