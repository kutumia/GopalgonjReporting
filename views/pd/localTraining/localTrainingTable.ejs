<%if (records.length >0){ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
    <thead>
    <tr>
        <th>ক্রমিক নং</th>
        <th>কর্মকর্তার নাম</th>
        <th>পদবী ও কর্মস্থল</th>
        <th>মোবাইল নম্বর</th>
        <th>কর্মশালার ভেন্যু</th>
        <th>কর্মশালার তারিখ</th>
        <th>পরিবর্তন/মুছুন</th>

    </tr>
    </thead>
    <tbody>
        <% records.forEach(function(row,index){ %>
            <tr>
                <td><%= index+1 %></td>
                <td><%= row.name %></td>
                <td><%= row.podobi %></td>
                <td><%= row.mobile %></td>
                <td><%= row.venue %></td>
                <td><%= row.date%></td>
                <td><a class="btn btn-primary btn-xs" href="/pd/localTrainingEdit/<%= row.id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/pd/localTrainingDelete/<%= row.id %>"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<% }else{ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
        <thead>
        <tr>
            <th>ক্রমিক নং</th>
            <th>কর্মকর্তার নাম</th>
            <th>পদবী ও কর্মস্থল</th>
            <th>মোবাইল নম্বর</th>
            <th>কর্মশালার ভেন্যু</th>
            <th>কর্মশালার তারিখ</th>
        </tr>
        </thead>
        <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td colspan="10">No data Found</td>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } %>